<h1>This is the list of all article</h1>
<p><%= link_to "Create new article", new_article_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= list.description %></td>
    <td><%= link_to 'Edit', edit_article_path(list)%></td>
    <td><%= link_to 'Show', article_path(list)%></td>
    <td><%= link_to 'Delete', article_path(list), method: :delete, data:{confirm: "Are you sure?"}%></td>
  </tr>
  <% end %>
</table>
