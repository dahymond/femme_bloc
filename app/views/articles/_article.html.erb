<% obj.each do |list| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="article-title">
        <%= link_to list.title, article_path(list) %>
      </div>
      <div class="article-body">
        <%= truncate(list.description, length: 100) %>
      </div>
       </div>
          <% if logged_in? && current_user == list.user %>
            <div class="article-actions">
            <%= link_to "edit this article", edit_article_path(list), class: "btn btn-xs btn-primary" %>
            <%= link_to "show article", article_path(list), class: "btn btn-xs btn-success" %>
            <%= link_to "Delete this article", article_path(list), method: :delete,
                          data: {confirm: "Are you sure you wan to delete article?"}, class: "btn btn-xs btn-danger" %>

           </div>
    <% end %>
  </div>
</div>


<% end %>
